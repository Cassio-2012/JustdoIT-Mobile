<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/cardview_shadow_end_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="margin_default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="width_et" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">290dp</item>

    </style>
    <style name="cadastroEventoInputDigitavel">
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="cadastroEventoInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="textoInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="botoesCadastroEvento">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button_gray</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">15sp</item>

    </style>


    <style name="logo_cadastro">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">310dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:src">@drawable/logo</item>

    </style>

    <style name="ll_default">

        <item name="android:background">#ffffff</item>

    </style>

    <style name="ll_dark">

        <item name="android:background">#000000</item>

    </style>

    <style name="tv_default">

        <item name="android:textColor">#000000</item>

    </style>

    <style name="tv_dark">

        <item name="android:textColor">#A9A9A9</item>

    </style>


</resources>