<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".view.PerfilActivity">

    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroolView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@id/toobar"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/body_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_perfil"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fotoperfil"
                    tools:layout_editor_absoluteX="127dp" />

                <TextView
                    android:id="@+id/name_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Meliante_mandrack"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/work_name_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Project Owner"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/sobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Sobre :"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/body_perfil"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/sobre">

                <TextView
                    android:id="@+id/date_name_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:text="Nome"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_name"
                    style="@style/width_et"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_cadastro"
                    android:inputType="text"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/date_name_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:text="E-Mail"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_Email"
                    style="@style/width_et"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_cadastro"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/date_name_Telefone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:text="Telefone"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_Telefone"
                    style="@style/width_et"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_cadastro"
                    android:inputType="number"
                    android:paddingLeft="5dp" />

                <Button
                    android:id="@+id/btn_Perfil_one"
                    android:layout_width="match_parent"

                    android:layout_height="46dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_cadastro_blue"
                    android:fontFamily="sans-serif-black"
                    android:hint="@string/continuar"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/body_two" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>