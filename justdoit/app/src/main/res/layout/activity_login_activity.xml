<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Login_activity">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/logoTexto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="2"
            android:src="@drawable/logotexto" />

        <ImageView
            android:id="@+id/logoImagem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/body"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:padding="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:textColor="#000"
                android:textSize="26sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/cadastreseTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="goToRegister"
                android:text="ou cadastre-se no JustDoIT"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/titulo" />

            <TextView
                android:id="@+id/LoginTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="Email ou telefone"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/titulo" />

            <EditText
                android:id="@+id/loginInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_input"
                android:paddingStart="10sp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/nomeDeEventoTxt"

                />

            <TextView
                android:id="@+id/SenhaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Senha"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/titulo" />

            <EditText
                android:id="@+id/senhaInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_input"
                android:inputType="textPassword"
                android:paddingStart="10sp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/nomeDeEventoTxt"

                />

            <TextView
                android:id="@+id/RecoverpassTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Esqueceu a Senha ?"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/titulo" />

            <LinearLayout
                android:id="@+id/recaptcha"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_recaptcha"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/titulo">

                <CheckBox
                    android:id="@+id/checkbox_recaptcha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:text="Eu nÃ£o sou um robo"
                    android:textSize="15sp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/recaptcha" />

            </LinearLayout>


            <Button
                android:id="@+id/loginBotao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_blue"
                android:onClick="Login"
                android:padding="15dp"
                android:text="Entrar"
                android:textAllCaps="false"
                android:textColor="#ffff"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/descricaoInput" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>