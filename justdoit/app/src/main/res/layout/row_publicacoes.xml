<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#00FFFFFF"
    android:id="@+id/ll_row">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form_events"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="6dp" >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_foto_perfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/photoPerfil"
            android:src="@drawable/caledar_events"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nomeUsuario"
                android:text="Nome usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dataPublicacao"
                android:text="data"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#838383"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/conteudo"
                android:text="conteudo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/nomeUsuario"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plus"
                android:visibility="gone"
                android:id="@+id/fotoPublicacao"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/mais"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/like" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/like"
                    android:padding="6dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
